CFLAGS=-std=gnu99 ${JSON_CFLAGS} -O3 @XML_CFLAGS@
CC=gcc

all: Meteo News
	strip Meteo
	strip News

bin_PROGRAMS = Meteo
Meteo_SOURCES = Meteo.c

AM_CFLAGS = $(json-c_CFLAGS)
